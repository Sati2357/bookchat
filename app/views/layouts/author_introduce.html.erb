<!DOCTYPE html>
<html>
  <head>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
	<script type="text/javascript" src="https://code.jquery.com/jquery-1.11.3.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
	<meta name="twitter:card" content="summary">
	<meta name="twitter:site" content="@Rishiryu1" />
	<meta property="og:url" content="https://my-bookchat.com/<%= @user.id %>/author_introduce" />
	<meta property="og:title" content="<%= @user.user_name %>の小説をチャット形式で読める 無料小説投稿サイトBookChat" />
	<meta property="og:description" content="<%= @user.user_name %>の作品を読んで見ませんか？" />
	<meta property="og:image" content="https://my-bookchat.com/user_images/<%= @user.user_image %>" />
	<meta name="google-site-verification" content="vx9SmIXCb-dobODCzHSPun34P3GXKehMp04-isEEYCc" />
  </head>
  <body>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <script async src="https://www.googletagmanager.com/gtag/js?id=UA-117552395-1"></script>
  <script>
  	window.dataLayer = window.dataLayer || [];
  	function gtag(){dataLayer.push(arguments);}
  	gtag('js', new Date());

  	gtag('config', 'UA-117552395-1');
  </script>
  	<header>
	  <div class="authorHeader">
		  <div class="usualHeader_logo">
			  <%= link_to image_tag('/BookChat_logo.png', { :border => '0', :alt => 'BookChat'}), "/" %>
		  </div>
		  <div class="width_authorIntroduce">
			  
		  </div>
		  <div class="author_information" align="center">
			  <div class="book_title_head">
				  <%= @user.user_name %>
			  </div>
			  <div class="book_chapter_head">
				  紹介ページ
			  </div>
		  </div>
		  <%if session[:user_id] %>
			  <ul class="menu1">
				<li class="teacher_header_name thm thn"><span>MENU▼</span>
					<ul class="sub thn">
						  <li class="thn"><%= link_to("#{@current_user.user_name.truncate(10)}様ページ","/users/#{@current_user.id}/reader_central")%></li>
						  <li class="thn"><%= link_to("作家一覧","/author_menu")%></li>
						  <li class="thn"><%= link_to("作品ジャンル","/category_all")%></li>
					</ul>
				</li>
			  </ul>
			  <div class="clear clear_right"></div>
		  <%else%>
		  <ul class="menu1">
				<li class="teacher_header_name thm thn"><span>MENU▼</span>
					<ul class="sub thn">
						  <li class="thn"><%= link_to("作家一覧","/author_menu")%></li>
						  <li class="thn"><%= link_to("作品ジャンル","/category_all")%></li>
						  <li class="thn"><%= link_to("小説家登録","/author_register")%></li>
						  <li class="thn"><%= link_to("読者登録","/reader_register")%></li>
						  <li class="thn"><%= link_to("ログイン","/login_form")%></li>
					</ul>
				</li>
		   </ul> 
		   <%end%>
		  <div class="clear clear_right"></div>
	  </div>
	</header>
	
	<% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
	<%end%>
	
    <%= yield %>
	<footer>
		<div class="footer_content">
			<div class="footer_left">
				<div class="footer_left_content">
					<div class="footer_left_msg">
						ジャンル
					</div>
					<ul>
						<li><%= link_to("青空文庫","/aozora_books")%></li>
						<li><%= link_to("恋愛作品","/1/恋愛/category_love/each_category")%></li>
						<li><%= link_to("実用・エッセイ","/3/実用・エッセイ/category_essay/each_category")%></li>
						<li><%= link_to("SF・冒険","/4/ＳＦ・冒険/category_SF/each_category")%></li>
					</ul>
					<ul>
						<li><%= link_to("青春・友情","/5/青春･友情/category_friend/each_category")%></li>
						<li><%= link_to("ノンフィクション・実話","/6/ノンフィクション・実話/category_nonfiction/each_category")%></li>
						<li><%= link_to("ホラー・オカルト","/7/ホラー・オカルト/category_horrow/each_category")%></li>
						<li><%= link_to("歴史・時代","/8/歴史・時代/category_history/each_category")%></li>
					</ul>
					<ul>
						<li><%= link_to("コメディー","/9/コメディー/category_comedy/each_category")%></li>
