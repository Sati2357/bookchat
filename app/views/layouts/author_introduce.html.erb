						<li><%= link_to("童話","/10/童話/category_douwa/each_category")%></li>
						<li><%= link_to("その他のジャンル","/11/その他/category_others/each_category")%></li>
					</ul>
				</div>
			</div>
			<div class="footer_right">
					<%= link_to image_tag('/BookChat_logo.png', { :border => '0', :alt => '小説投稿サイト'}), "/" %>
					<div class="footer_right_right">
					<ul>
						<li><%= link_to("会社情報","/company_information")%></li>
						<li><%= link_to("お問い合わせ","/company_information/#top_customerQuestion")%></li>
						<li><%= link_to("利用規約","/termOfUse")%></li>
					</ul>
					<ul>
						<li><%= link_to("プライバシーポリシー","/privacy_policy")%></li>
						<li><%= link_to("サイトリンク","/")%></li>
					</ul>
				    </div>
					<div class="clear"></div>
			</div>
			<div class="clear"></div>
			<br>
			<div class="footer_down">
				<div class="footer_down_content">
					<%= link_to("Medici広場","https://medicihiroba.com")%>　　<%= link_to("KikiMap(海外治安情報)","https://medicihiroba.com/kikimap/")%><br>
					<div class="footer_bottom">
						<%= link_to("英会話の等講師紹介","https://medicihiroba.com/toppage_lt.html")%>　　<%= link_to("個人契約の家庭教師紹介","https://medicihiroba.com/toppage_pt.html")%><br><br><%= link_to("MeeCoo","https://mee-coo.com")%>　　<%= link_to("クイズサイト","https://medicihiroba.com/rishiryu/")%>　　<%= link_to("サイトマップ（家庭教師）","/https://mee-coo.com/siteMap_homeTeacher")%>　　<%= link_to("サイトマップ(英会話)","/https://mee-coo.com/siteMap_language")%>
					</div>
				</div>
			</div>
		</div>
	</footer>
  </body>
</html>
